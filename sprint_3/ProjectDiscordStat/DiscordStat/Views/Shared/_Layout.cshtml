<!DOCTYPE html>
<html lang="en">
<head>
    <title>Stat Tracker</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - DiscordStat</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>

    
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">    
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-host-cloud.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

</head>
<body>


 <header class="">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
              <img src="~/TeamLogo.png" width="100" height="60"; style="margin-right:1%" />
          <a class="navbar-brand" asp-controller="Home" asp-action="Index"><h2>Stat <em>Tracker</em></h2></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item active">
               <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home
                  <span class="sr-only">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" style="white-space: nowrap;" asp-area="" asp-controller="Home" asp-action="AllServers">All Servers</a>
              </li>
              @if (User.Identity.IsAuthenticated)
                        {
              <li class="nav-item">
                    <a class="nav-link" style="white-space: nowrap;" asp-area="" asp-controller="Account" asp-action="Servers"> My Servers</a>
              </li>
               <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Forum" asp-action="Forum">Forum</a>
               </li>
                        }

              <partial name="_LoginPartial" />
              </ul>
              </div>
        </div>
      </nav>
    </header>





    <div>     
            @RenderBody()
    </div>




<footer>
      <div class="container" style="text-align:center">
        <div class="row">
          <div class="col-md-3 col-sm-6 col-xs-12">
            
          </div>
          
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="footer-item">
              <div class="footer-heading">
                <h2><a asp-area="" asp-controller="Home" asp-action="Contact" style="color:white">Contact Us</a></h2>

              </div>
            </div>
          </div>
          
          
          <div class="col-md-3 col-sm-6 col-xs-12">
            <div class="footer-item">
              <div class="footer-heading">
                <h2><a asp-area="" asp-controller="Home" asp-action="Privacy" style="color:white">Privacy</a></h2>
              </div>
            </div>
          </div>
          
          <div class="col-md-3 col-sm-6 col-xs-12">
          </div>
          <div class="col-md-12">
            <div class="sub-footer">
              <p>Copyright &copy; 2022 Advanced Innovations</p>
            </div>
          </div>
        </div>
      </div>
    </footer>
    <!-- Footer Ends Here -->





    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    function CreateServer() {
        window.location.href = '/Account/ServerForm/'; 
    }
</script>